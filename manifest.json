{
  "manifest_version": 3,
  "name": "Azota Gemini Auto-Highlight",
  "version": "1.0",
  "description": "Tự động highlight đáp án đúng bằng Gemini AI",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": [
  "https://generativelanguage.googleapis.com/*",
  "https://my-gemini-proxy.ducdoan04-work.workers.dev/*",
  "https://azota.vn/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://azota.vn/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png"
  }
}